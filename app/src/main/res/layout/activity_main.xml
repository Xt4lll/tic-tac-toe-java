<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageButton
        android:id="@+id/switch_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/baseline_nightlight_24"
        android:background="#00FFFFFF"
        android:layout_margin="16dp"/>
    
    <TextView
        android:id="@+id/tic_tac_toe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="tic-tac-toe"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/switch_button"
        android:textSize="28sp"/>

    <GridLayout
        android:id="@+id/field"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/tic_tac_toe"
        android:layout_margin="50dp"
        android:columnCount="3"
        android:rowCount="3">

        <Button
            android:id="@+id/button_00"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:backgroundTint="#FFFFFF"
            android:gravity="center"
            android:textSize="48sp"
            app:cornerRadius="0dp"
            android:layout_margin="15dp"
            app:strokeColor="#000000"
            app:strokeWidth="2dp" />

        <Button
            android:id="@+id/button_01"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:backgroundTint="#FFFFFF"
            android:gravity="center"
            android:textSize="48sp"
            app:cornerRadius="0dp"
            android:layout_margin="15dp"
            app:strokeColor="#000000"
            app:strokeWidth="2dp"/>

        <Button
            android:id="@+id/button_02"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:backgroundTint="#FFFFFF"
            android:gravity="center"
            android:textSize="48sp"
            app:cornerRadius="0dp"
            android:layout_margin="15dp"
            app:strokeColor="#000000"
            app:strokeWidth="2dp"/>

        <Button
            android:id="@+id/button_10"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:backgroundTint="#FFFFFF"
            android:gravity="center"
            android:textSize="48sp"
            app:cornerRadius="0dp"
            android:layout_margin="15dp"
            app:strokeColor="#000000"
            app:strokeWidth="2dp"/>

        <Button
            android:id="@+id/button_11"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:backgroundTint="#FFFFFF"
            android:gravity="center"
            android:textSize="48sp"
            app:cornerRadius="0dp"
            android:layout_margin="15dp"
            app:strokeColor="#000000"
            app:strokeWidth="2dp"/>

        <Button
            android:id="@+id/button_12"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:backgroundTint="#FFFFFF"
            android:gravity="center"
            android:textSize="48sp"
            app:cornerRadius="0dp"
            android:layout_margin="15dp"
            app:strokeColor="#000000"
            app:strokeWidth="2dp"/>

        <Button
            android:id="@+id/button_20"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:backgroundTint="#FFFFFF"
            android:gravity="center"
            android:textSize="48sp"
            app:cornerRadius="0dp"
            android:layout_margin="15dp"
            app:strokeColor="#000000"
            app:strokeWidth="2dp"/>

        <Button
            android:id="@+id/button_21"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="15dp"
            android:backgroundTint="#FFFFFF"
            android:gravity="center"
            android:textSize="48sp"
            app:cornerRadius="0dp"
            app:strokeColor="#000000"
            app:strokeWidth="2dp" />

        <Button
            android:id="@+id/button_22"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:backgroundTint="#FFFFFF"
            android:gravity="center"
            android:textSize="48sp"
            app:cornerRadius="0dp"
            android:layout_margin="15dp"
            app:strokeColor="#000000"
            app:strokeWidth="2dp"/>


    </GridLayout>

    <ImageButton
        android:id="@+id/button_reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/stats"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/baseline_replay_24"
        android:background="#00FFFFFF"
        android:layout_margin="100dp"/>

    <TextView
        android:id="@+id/stats"
        android:layout_width="238dp"
        android:layout_height="24dp"
        android:text="X - 0 | O - 0 | DRAW - 0"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="20dp"
        android:textAlignment="center"/>


</androidx.constraintlayout.widget.ConstraintLayout>